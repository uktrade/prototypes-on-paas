<!-- Pass values into macro: title (optional), description, dismiss link message (optional)-->
<section class="intervention-banner">
  {% if  params.interventionTitle %}
    <h2 class="govuk-heading-m">{{ params.interventionTitle }}</h2>
  {% else %}
  {% endif %}
    <p class="govuk-body">{{ params.interventionDescription }}</p>
    <p class="govuk-body govuk-!-margin-bottom-0">
        <a class="govuk-link" href="#">
          <svg class="intervention-banner__dismiss-icon" width="19" height="19" viewBox="0 0 19 19" aria-hidden="true" fill="none" stroke="currentColor">
            <path d="M0.499997 9.5C0.499997 4.52944 4.52944 0.499999 9.5 0.499999C14.4706 0.5 18.5 4.52944 18.5 9.5C18.5 14.4706 14.4706 18.5 9.5 18.5C4.52943 18.5 0.499997 14.4706 0.499997 9.5Z"></path>
            <path d="M13.3477 5.4209L9.67383 9.09473L6 5.4209"></path>
            <path d="M6 13.4209L9.67383 9.74707L13.3477 13.4209"></path>
          </svg>
          {% if  params.interventionDismissLinkMessage %}
            {{ params.interventionDismissLinkMessage }}
          {% else %}
          Hide this suggestion
          {% endif %}
</a></p>
</section>